{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "ES2015",
      "ES6",
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    // "esModuleInterop": true,
    "target": "es6",
    // "allowJs": true,
    // "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}